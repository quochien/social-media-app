<%= form_for @facebook_app, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Name", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :app_id, "APP ID", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :app_id, class: "form-control", placeholder: "APP ID", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :app_secret, "APP SECRET", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :app_secret, class: "form-control", placeholder: "APP SECRET", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :page_url, "Page url", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :page_url, class: "form-control", placeholder: "Page url", required: true %>
    </div>
  </div>

  <div class="hr-line-dashed"></div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
