<%= form_for [@facebook_app, @monitor_task], html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :source_facebook_url, "Source Facebook Url", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :source_facebook_url, class: "form-control", placeholder: "Source Facebook Url", required: true %>
    </div>
  </div>

  <div class="hr-line-dashed"></div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
      <%= f.submit "Submit", class: "btn btn-primary" %>
      <%= link_to "Cancel", facebook_app_monitor_tasks_path(@facebook_app), class: "btn btn-info" %>
    </div>
  </div>
<% end %>
